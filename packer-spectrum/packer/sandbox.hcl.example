# Sandbox Environment Configuration
# Copy this file to sandbox.hcl and fill in your actual values

# AWS Infrastructure
region = "ca-central-1"
vpc_id = "vpc-xxxxxxxxx"  # Replace with your VPC ID
subnet_id = "subnet-xxxxxxxxx"  # Replace with your subnet ID
account = "123456789012"  # Replace with your AWS account ID

# Spectrum Application
spectrum_version = "5.x.x"
spectrum_package_url = ""  # Set your Spectrum package URL here
# OR use local path:
# spectrum_package_path = "/path/to/SpectrumV5.x.x.zip"

# Database Configuration
db_type = "mysql"  # or "sqlserver"
db_host = "your-database-host.rds.amazonaws.com"  # Replace with your RDS endpoint
db_user = "your-db-username"  # Replace with your database username
db_password = "your-db-password"  # Replace with your database password
db_name = "kioskmgr"  # Replace with your database name

# Server Configuration
server_ip = "your-server-ip-or-hostname"  # Replace with your server IP or hostname

# JVM Configuration (optional - defaults shown)
jvm_xmx = "2g"
jvm_xms = "1g"

